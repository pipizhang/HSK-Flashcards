CREATE TABLE  Hanzi (
 id INT NOT NULL AUTO_INCREMENT ,
 HSK VARCHAR( 1 ) ,
 Chapter VARCHAR( 2 ) ,
 HanziS VARCHAR( 8 ) NOT NULL ,
 HanziT VARCHAR( 8 ) ,
 Pinyin VARCHAR( 32 ) NOT NULL ,
 PinyinNum VARCHAR( 64 ) ,
 English VARCHAR( 128 ) ,
 PartofSpeech VARCHAR( 16 ) ,
 Audio VARCHAR( 256 ) ,
 StrokeGIF VARCHAR( 256 ) ,
 StrokeVideo VARCHAR( 256 ),
PRIMARY KEY (  id )
)CHARACTER SET utf8 COLLATE utf8_general_ci;
ALTER TABLE `Hanzi` ADD INDEX(`HSK`);
ALTER TABLE `Hanzi` ADD INDEX(`Chapter`);
ALTER TABLE `Hanzi` ADD INDEX(`PartofSpeech`);

CREATE TABLE Review (
 id INT NOT NULL ,
 HSK VARCHAR( 1 )
PRIMARY KEY (  id )
)CHARACTER SET utf8 COLLATE utf8_general_ci;
ALTER TABLE `Review` ADD INDEX(`HSK`);

CREATE TABLE RadicalHanzi (
 id INT NOT NULL AUTO_INCREMENT,
 RadicalID INT NOT NULL,
 HanziID INT NOT NULL,
PRIMARY KEY (  id )
)CHARACTER SET utf8 COLLATE utf8_general_ci;
ALTER TABLE `RadicalHanzi` ADD INDEX(`RadicalID`);
